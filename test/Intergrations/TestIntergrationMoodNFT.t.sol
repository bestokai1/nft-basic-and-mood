pragma solidity ^0.8.23;

import {Test, console} from "forge-std/Test.sol";
import {MoodNFT} from "../../src/MoodNFT.sol";
import {DeployMoodNFT} from "../../script/DeployMoodNFT.s.sol";


contract TestIntergrationsMoodNFT is Test {
    MoodNFT moodNFT;
    DeployMoodNFT deployer;

    string public constant HAPPY_SVG_IMG_URI = "data:image/svg+xml;base64,";
    string public constant SAD_SVG_IMG_URI = "data:image/svg+xml;base64,";
    string public constant HAPPY_SVG_URI = "data:application/json;base64,";

    address USER = makeAddr("user");

    function setUp() public{
        deployer = new DeployMoodNFT();
        moodNFT = deployer.run();
    }

    function testIntergrationMoodNFTViewTokenURI() public{
        vm.prank(USER);
        moodNFT.mintNFT();
        console.log(moodNFT.tokenURI(1));
    }

    function testFlipTokenToSad() public{
        vm.prank(USER);
        moodNFT.mintNFT();
        vm.prank(USER);
        moodNFT.flipMood(0);

        assertEq(keccak256(abi.encodePacked(moodNFT.tokenURI(0))), keccak256(abi.encodePacked(HAPPY_SVG_URI)));
    }
}